<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="finalyear.bookstorepatterns" >

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".OpeningActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".CustomerMain" >
        </activity>
        <activity
            android:name=".AdminMain"
            android:label="@string/title_activity_admin_main"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".DetailedBook"
            android:label="Detailed Book">
        </activity>
        <activity android:name=".DetailedUser" >
        </activity>
        <activity
            android:name=".UserTransactionHistory"
            android:label="@string/title_activity_user_transaction_history">
        </activity>
    </application>

</manifest>
